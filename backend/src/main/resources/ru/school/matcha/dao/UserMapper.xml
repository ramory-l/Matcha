<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ru.school.matcha.dao.UserMapper">

    <resultMap id="User" type="ru.school.matcha.domain.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="firstName" column="first_name"/>
        <result property="lastName" column="last_name"/>
        <result property="email" column="email"/>
        <result property="gender" column="gender"/>
        <result property="birthday" column="birthday"/>
        <result property="description" column="description"/>
        <result property="isActive" column="is_active"/>
        <result property="rate" column="rate"/>
        <result property="role" column="role"/>
        <result property="createTs" column="create_ts"/>
        <result property="updateTs" column="update_ts"/>
        <result property="deleteTs" column="delete_ts"/>
        <association property="form" column="id" javaType="ru.school.matcha.domain.Form"
                     select="ru.school.matcha.dao.FormMapper.getFormById"/>
        <association property="avatar" column="avatar_id" javaType="ru.school.matcha.domain.Image"
                     select="ru.school.matcha.dao.ImageMapper.getImageById"/>
    </resultMap>

    <insert id="createUser">
        INSERT INTO "user"(username, email, password, first_name, last_name, is_active, form_id, rate, create_ts)
        VALUES (#{user.username},
                #{user.email},
                #{user.password},
                #{user.firstName},
                #{user.lastName},
                true,
                #{formId},
                #{user.rate},
                now())
    </insert>

    <insert id="createFullUser">
        INSERT INTO "user"(username, first_name, last_name, password, email, gender, birthday, description, rate,
                           form_id)
        VALUES (#{username},
                #{firstName},
                #{lastName},
                #{password},
                #{email},
                #{gender},
                #{birthday},
                #{description},
                #{rate},
                #{form.id})
        ON CONFLICT DO NOTHING
    </insert>

    <update id="updateUserByUsername">
        UPDATE "user" SET
        <if test="firstName != null">
            first_name = #{firstName},
        </if>
        <if test="lastName != null">
            last_name = #{lastName},
        </if>
        <if test="email != null">
            email = #{email},
        </if>
        <if test="gender != null">
            gender = #{gender},
        </if>
        <if test="birthday != null">
            birthday = #{birthday},
        </if>
        <if test="description != null">
            description = #{description},
        </if>
        <if test="form != null and form.id != null">
            form_id = #{form.id},
        </if>
        update_ts = now()
        WHERE username = #{username}
    </update>

    <update id="updateUserById">
        UPDATE "user" SET
        <if test="firstName != null">
            first_name = #{firstName},
        </if>
        <if test="lastName != null">
            last_name = #{lastName},
        </if>
        <if test="email != null">
            email = #{email},
        </if>
        <if test="gender != null">
            gender = #{gender},
        </if>
        <if test="birthday != null">
            birthday = #{birthday},
        </if>
        <if test="description != null">
            description = #{description},
        </if>
        <if test="form != null and form.id != null">
            form_id = #{form.id},
        </if>
        update_ts = now()
        WHERE id = #{id}
    </update>

    <delete id="deleteUserById">
        DELETE
        FROM "user"
        WHERE id = #{id}
    </delete>

    <delete id="deleteUserByUsername">
        DELETE
        FROM "user"
        WHERE username ILIKE #{username}
    </delete>

    <select id="getAllUsers" resultMap="User">
        SELECT *
        FROM "user"
        ORDER BY id
    </select>

    <select id="getUserById" resultMap="User">
        SELECT *
        FROM "user"
        WHERE id = #{id}
    </select>

    <select id="getUserByUsername" resultMap="User">
        SELECT *
        FROM "user"
        WHERE username ILIKE #{username}
    </select>

    <select id="getUserEncryptPasswordById" resultType="java.lang.String">
        SELECT password
        FROM "user"
        WHERE id = #{id}
    </select>

</mapper>